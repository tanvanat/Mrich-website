generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  role          Role       @default(USER)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  accounts      Account[]
  responses     Response[]
  sessions      Session[]

  // ✅ เพิ่ม
  examStates    ExamState[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Response {
  id          String   @id @default(cuid())
  name        String?
  totalScore  Int
  maxScore    Int
  percent     Float
  level       String
  tip         String
  createdAt   DateTime @default(now())
  formId      String   @default("mrich-assessment-v1")
  userId      String?
  answersJson Json
  user        User?    @relation(fields: [userId], references: [id])

  @@index([createdAt])
  @@index([userId])
}

enum Role {
  USER
  ADMIN
}

model ExamState {
  id           String   @id @default(cuid())
  userId       String
  formId       String   @default("mrich-assessment-v1")

  // token ของ "รอบนี้" ใช้กันปลอม submit ข้ามรอบ
  attemptToken String   @unique @default(cuid())

  // เวลาเริ่มทำรอบนี้ (DB เป็นแหล่งจริง -> refresh ก็ยังนับต่อ)
  startedAt    DateTime?

  // user ส่งแล้วหรือหมดเวลาแล้ว = locked (ทำซ้ำไม่ได้จน admin ปลด)
  locked       Boolean  @default(false)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, formId])
  @@index([formId, updatedAt])
}
